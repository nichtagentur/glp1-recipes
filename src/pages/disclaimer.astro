---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Medical Disclaimer | GLP-1 Recipes"
  description="Important medical disclaimer. GLP-1 Recipes provides nutrition information only, not medical advice."
>
  <section class="relative py-24 md:py-32">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <span class="text-[11px] text-rose tracking-[0.25em] uppercase font-medium animate-fade-up">Important</span>
      <h1 class="font-display text-4xl md:text-5xl font-bold text-cream mt-4 animate-fade-up delay-1">
        Medical Disclaimer
      </h1>
    </div>
  </section>

  <div class="max-w-3xl mx-auto px-6 pb-20 space-y-10">

    <!-- Alert box -->
    <div class="border border-rose/30 bg-rose/[0.05] p-6 rounded-sm animate-fade-up delay-2">
      <p class="text-cream font-light leading-relaxed">
        The information provided on GLP-1 Recipes is for <strong class="text-cream font-medium">general informational and educational purposes only</strong>.
        It is not intended as, and should not be considered, medical advice, nutritional counseling, or a substitute for professional healthcare guidance.
      </p>
    </div>

    {[
      { title: 'Not Medical Advice', text: 'This website does not provide medical advice. The recipes, nutritional data, and health-related content are offered for informational purposes. Nothing on this site should be interpreted as a recommendation for or against any specific medication, treatment, or dietary approach.' },
      { title: 'Consult Your Healthcare Provider', text: 'If you are taking GLP-1 receptor agonist medications or any other medications, always consult your physician, registered dietitian, or other qualified healthcare provider before making significant dietary changes. Your healthcare team understands your individual medical history and can provide personalized guidance.' },
      { title: 'No Claims About Medication Efficacy', text: 'GLP-1 Recipes makes no claims about the efficacy, safety, or appropriateness of any GLP-1 medication. Our recipes are designed with general nutritional principles in mind and are not intended to treat, cure, or prevent any disease or medical condition.' },
      { title: 'Nutritional Data Are Estimates', text: 'Nutritional values provided for our recipes are estimates only. Actual nutritional content may vary based on specific ingredients and brands used, portion sizes, cooking methods and preparation variations, and ingredient substitutions.' },
      { title: 'Allergens & Dietary Restrictions', text: 'Our recipes may contain common allergens including but not limited to dairy, eggs, nuts, shellfish, soy, and gluten. Always check ingredient lists carefully if you have food allergies or intolerances.' },
      { title: 'Limitation of Liability', text: 'GLP-1 Recipes, its authors, and contributors shall not be held liable for any adverse effects, damages, or consequences resulting from the use of information on this website. Use of this site is at your own risk.' },
    ].map((section, i) => (
      <section class={`animate-fade-up delay-${Math.min(i + 3, 7)}`}>
        <h2 class="font-display text-xl font-bold text-cream mb-3">{section.title}</h2>
        <p class="text-cream/60 font-light leading-relaxed">{section.text}</p>
      </section>
    ))}

    <div class="text-center pt-8 border-t border-cream/[0.06] space-x-6">
      <a href={base} class="text-amber text-sm hover:text-amber-light transition-colors">
        Back to Recipes
      </a>
      <a href={`${base}/about/`} class="text-amber text-sm hover:text-amber-light transition-colors">
        About Us
      </a>
    </div>
  </div>
</BaseLayout>
