---
const base = import.meta.env.BASE_URL;
const categories = [
  { name: 'Breakfast', slug: 'breakfast' },
  { name: 'Lunch', slug: 'lunch' },
  { name: 'Dinner', slug: 'dinner' },
  { name: 'Snacks', slug: 'snacks' },
  { name: 'Soups', slug: 'soups' },
  { name: 'Smoothies', slug: 'smoothies' },
  { name: 'Meal Prep', slug: 'meal-prep' },
  { name: 'Sides', slug: 'side-dishes' },
];
---

<header class="fixed top-0 w-full z-50 transition-all duration-500" id="site-header">
  <div class="absolute inset-0 bg-midnight/80 backdrop-blur-md border-b border-cream/[0.06]"></div>
  <nav class="relative max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href={base} class="group flex items-baseline gap-3">
      <span class="font-display text-2xl font-bold text-cream tracking-wide group-hover:text-amber transition-colors duration-300">
        GLP-1
      </span>
      <span class="font-display text-sm font-normal text-cream-muted italic tracking-widest uppercase">
        Recipes
      </span>
    </a>

    <div class="hidden lg:flex items-center gap-0.5">
      {categories.map(cat => (
        <a
          href={`${base}/category/${cat.slug}/`}
          class="px-3 py-1.5 text-[13px] font-body font-light text-cream-muted hover:text-amber tracking-wide uppercase transition-colors duration-300"
        >
          {cat.name}
        </a>
      ))}
    </div>

    <a
      href={`${base}/about/`}
      class="text-[13px] font-light text-cream-muted hover:text-amber tracking-wide uppercase transition-colors duration-300"
    >
      About
    </a>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>
