---
interface Props {
  calories: number;
  protein: number;
  compact?: boolean;
}

const { calories, protein, compact = false } = Astro.props;
---

{compact ? (
  <div class="flex gap-2">
    <span class="text-[11px] font-medium tracking-wider uppercase text-amber border border-amber/30 px-2 py-0.5 rounded-sm">{protein}g protein</span>
    <span class="text-[11px] font-medium tracking-wider uppercase text-cream-muted border border-cream/10 px-2 py-0.5 rounded-sm">{calories} cal</span>
  </div>
) : (
  <div class="flex gap-3">
    <span class="text-xs font-medium tracking-wider uppercase text-amber border border-amber/40 px-3 py-1.5 rounded-sm">{protein}g protein</span>
    <span class="text-xs font-medium tracking-wider uppercase text-cream-muted border border-cream/15 px-3 py-1.5 rounded-sm">{calories} cal</span>
  </div>
)}
